{% extends 'base.html.twig' %}

{% block title %} Hidoyat.fr {% endblock %}
{% block stylesheets %}
    <link href="{{ asset('assets/styles/project_show.css') }}" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
{% endblock %}
{% block body %}
    {{ include('app/components/navbar.html.twig') }}
    <article class="bg-dark text-light">
        <div class="container pt-0 pt-md-5">
            <div class="row pb-0 pb-md-2">
                <div class="col-md-6 pb-3 pb-md-0">
                    <img src="{{ project.image }}" alt="{{ project.name }}" class="img-fluid">
                </div>
                <div class="col-md-6">
                    <h1>{{ project.name }}</h1>
                    <p class="text-muted fst-italic small"><i class="fa-regular fa-calendar"></i> {{ project.dateAsString }}</p>
                    <p class="py-1">{{ project.shortDesc }}</p>
                    <div class="langages-used">
                        <p class="fw-bold">Technologies utilis√©es:</p>
                        {{ project.langagesAsString | raw }}
                    </div>
                    <p class="text-muted pt-4">{{ project.sourceCode | raw }}</p>
                </div>
            </div>
            <section class="project-longdesc py-0 py-md-2">
                {{ project.longDesc | raw }}
            </section>
        </div>
    </article>
{% endblock %}